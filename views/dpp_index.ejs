        function toggleCategory(element) {
            // Find the closest category content within this category card
            const categoryContent = element.closest('.category-card').querySelector('.category-content');
            
            // Toggle expanded class
            categoryContent.classList.toggle('expanded');
            
            // Toggle chevron icon
            const chevronIcon = element.querySelector('i');
            if (chevronIcon.classList.contains('fa-chevron-down')) {
                chevronIcon.classList.remove('fa-chevron-down');
                chevronIcon.classList.add('fa-chevron-up');
            } else {
                chevronIcon.classList.remove('fa-chevron-up');
                chevronIcon.classList.add('fa-chevron-down');
            }
        }


        

