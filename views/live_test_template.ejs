              var integerAnswer = integerAnswerInput.value
      
              if (!integerAnswer) {
                alert("Please enter a valid integer.");
                return;
              }
      
              question.userAnswer = integerAnswer;
            }
      
            currentQuestion++;
      
            if (currentQuestion < questions.length) {
              displayQuestion();
            } else {
              submitTest();
            }        
          }
          
  
